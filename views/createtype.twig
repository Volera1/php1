{% extends "shablon.twig" %}

{% block content %}
	<h3>Вселенная</h3>
	<hr>
	{% if message %}
		<div class="alert alert-info">
			{{message}}
			{# <a href="/types/{{id}}">открыть новую вселенную</a> #}
		</div>
	{% endif %}


	<form class="row g-3" enctype="multipart/form-data" action="" method="POST">
		<div class="col-4">
			<label class="form-label">Название</label>
			<input type="text" class="form-control" name="name_type">
		</div>
		<div class="mb-3">
			<label for="formFile" class="form-label">Картинка !квадратная!</label>
			<input class="form-control" type="file" name="image">
		</div>
		<div class="col-12">
		
			<button type="submit" class="btn btn-primary">Добавить</button>
		</div>
	</form>

{% endblock %}
